.register-logo {
  display: block;
  width: 60%;
  margin-top: 10%;
  margin-left: auto;
  margin-right: auto;
}
.invite-code {
  width: 80%;
  margin-top: 10%;
  margin-left: auto;
  margin-right: auto;
  font-size: 40rpx;
}
.invite-code .invite-inputer {
  width: 100%;
  height: 80rpx;
  border: 4rpx solid #000;
  border-radius: 10rpx;
  background-color: #f5f5f5;
  text-align: center;
  font-size: 48rpx;
  color: #000;
  padding-left: 6rpx;
  padding-right: 6rpx;
}
.invite-code .shuoming {
  margin-top: 20rpx;
  color: #000;
}
.register-button {
  margin-top: 10%;
  width: 30%;
  margin-left: auto;
  margin-right: auto;
  background-color: #3474FF;
}
.register-button:active {
  background-color: #f00;
  width: 40%;
}

